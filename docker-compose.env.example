# Docker Compose Environment Variables
# Copy this file to .env in the root directory and fill in your values

# =============================================================================
# Database & Data Paths (Host-mounted directories)
# =============================================================================
# These paths are on your HOST machine, outside the repository
# They will be mounted into containers as volumes
# 
# IMPORTANT: Use ABSOLUTE paths for paths outside the repository
# The directories must exist on the host before starting containers

# SQLite database directory (must exist on host)
# The database file will be created at: ${SQLITE_DATA_PATH}/database.db
# 
# IMPORTANT: Use ABSOLUTE paths for directories outside the repository
# 
# Examples:
#   SQLITE_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data  (outside repo - recommended)
#   SQLITE_DATA_PATH=/home/jonathan/databases/real-fake-news              (absolute path)
#   SQLITE_DATA_PATH=./database                                            (relative to repo - for testing only)
#   SQLITE_DATA_PATH=~/databases/real-fake-news                            (home directory - expands to absolute)
# Production example:
# SQLITE_DATA_PATH=/var/www/otherProjects/Real-Fake-News-Data
SQLITE_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data

# Images directory (must exist on host)
# Article images will be stored in: ${IMAGES_DATA_PATH}/ and ${IMAGES_DATA_PATH}/compressed/
#
# Production example:
# IMAGES_DATA_PATH=/var/www/otherProjects/Real-Fake-News-Data/images
#
# Examples:
#   IMAGES_DATA_PATH=/var/www/otherProjects/Real-Fake-News-Data/images  (production)
#   IMAGES_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data/images  (local)
#   IMAGES_DATA_PATH=./images                                             (testing only)
IMAGES_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data/images

# =============================================================================
# Port Configuration
# =============================================================================
SERVER_PORT=5001
CLIENT_PORT=5173
ADMIN_PORT=5174

# =============================================================================
# Server Environment Variables
# =============================================================================
# NOTE: NODE_ENV is controlled by docker-compose files:
#   - Production: docker-compose.yml defaults to "production"
#   - Development: docker-compose.dev.yml sets "development"
#   Do NOT set NODE_ENV here - it will be overridden anyway!

CLIENT_URL=http://localhost:5173
ADMIN_PASSWORD=changeme123

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
NEWSDATA_API_KEY=your_newsdata_api_key_here
RUNWARE_API_KEY=your_runware_api_key_here
RUNWARE_IMAGE_MODEL=runware:z-image@turbo

# Email Configuration
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Scheduled Jobs
ENABLE_SCHEDULED_JOBS=true
LOCAL_DEV_BACKEND=false

# =============================================================================
# Client Environment Variables (BUILD TIME - baked into static files)
# =============================================================================
# IMPORTANT: These are used at BUILD time. You must rebuild containers after changing them.

# Use relative API URLs (recommended for production with nginx proxy)
# When true, frontend uses "/api" instead of full URLs
VITE_USE_RELATIVE_API=true

# Set to false for production, true for local development
VITE_BACKEND_DEV_MODE=false

# Only used if VITE_USE_RELATIVE_API=false
VITE_API_BASE_DEV=http://localhost:5001
VITE_API_BASE_PROD=https://real.sensorcensor.xyz

VITE_DEBUG_LOGS=false

# Temporary feature flag - set to "false" to hide horoscopes section
# Remove this when no longer needed
VITE_SHOW_HOROSCOPES=true

# =============================================================================
# Admin Environment Variables (BUILD TIME - baked into static files)
# =============================================================================
# IMPORTANT: These are used at BUILD time. You must rebuild containers after changing them.

# Backend connection mode for admin panel
# Set to "true" to use local dev backend (localhost:5001)
# Set to "false" to use production backend (VITE_API_BASE_PROD)
VITE_BACKEND_DEV_MODE=true

# Dev backend URL (used when VITE_BACKEND_DEV_MODE=true)
# Note: If admin is in Docker and server is on host, use host.docker.internal:5001 (Mac/Windows)
#       or use the host's IP address instead of localhost
VITE_API_BASE_DEV=http://localhost:5001

# Production backend URL (used when VITE_BACKEND_DEV_MODE=false)
# Use IP:port format for connecting to remote production server
# Example: http://162.0.237.138:5001
VITE_API_BASE_PROD=http://162.0.237.138:5001

# Use relative API URLs (for nginx proxy - usually false in dev mode)
VITE_USE_RELATIVE_API=false

VITE_FRONTEND_DEV_MODE=true
VITE_CLIENT_URL_DEV=http://localhost:5173
VITE_CLIENT_URL_PROD=https://real.sensorcensor.xyz


