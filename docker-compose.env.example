# Docker Compose Environment Variables
# Copy this file to .env in the root directory and fill in your values

# =============================================================================
# Database & Data Paths (Host-mounted directories)
# =============================================================================
# These paths are on your HOST machine, outside the repository
# They will be mounted into containers as volumes
# 
# IMPORTANT: Use ABSOLUTE paths for paths outside the repository
# The directories must exist on the host before starting containers

# SQLite database directory (must exist on host)
# The database file will be created at: ${SQLITE_DATA_PATH}/database.db
# 
# IMPORTANT: Use ABSOLUTE paths for directories outside the repository
# 
# Examples:
#   SQLITE_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data  (outside repo - recommended)
#   SQLITE_DATA_PATH=/home/jonathan/databases/real-fake-news              (absolute path)
#   SQLITE_DATA_PATH=./database                                            (relative to repo - for testing only)
#   SQLITE_DATA_PATH=~/databases/real-fake-news                            (home directory - expands to absolute)
SQLITE_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data

# Images directory (must exist on host)
# Article images will be stored in: ${IMAGES_DATA_PATH}/ and ${IMAGES_DATA_PATH}/compressed/
#
# Examples:
#   IMAGES_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data/images  (outside repo - recommended)
#   IMAGES_DATA_PATH=/home/jonathan/images/real-fake-news                        (absolute path)
#   IMAGES_DATA_PATH=./images                                                     (relative to repo - for testing only)
IMAGES_DATA_PATH=/home/jonathan/Documents/GitHub/Real-Fake-News-Data/images

# =============================================================================
# Port Configuration
# =============================================================================
SERVER_PORT=5001
CLIENT_PORT=5173
ADMIN_PORT=5174

# =============================================================================
# Server Environment Variables
# =============================================================================
NODE_ENV=production
CLIENT_URL=http://localhost:5173
ADMIN_PASSWORD=changeme123

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
NEWSDATA_API_KEY=your_newsdata_api_key_here
RUNWARE_API_KEY=your_runware_api_key_here
RUNWARE_IMAGE_MODEL=runware:z-image@turbo

# Email Configuration
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Scheduled Jobs
ENABLE_SCHEDULED_JOBS=true
LOCAL_DEV_BACKEND=false

# =============================================================================
# Client Environment Variables
# =============================================================================
VITE_BACKEND_DEV_MODE=false
VITE_API_BASE_DEV=http://localhost:5001
VITE_API_BASE_PROD=http://server:5001
VITE_USE_RELATIVE_API=false
VITE_DEBUG_LOGS=false

# =============================================================================
# Admin Environment Variables
# =============================================================================
VITE_FRONTEND_DEV_MODE=false
VITE_CLIENT_URL_DEV=http://localhost:5173
VITE_CLIENT_URL_PROD=http://localhost:5173

