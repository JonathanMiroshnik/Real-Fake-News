# Admin Panel Environment Variables
# Copy this file to .env and adjust the values as needed

# Backend API Base URL Configuration
# Development mode server URL (localhost)
VITE_API_BASE_DEV=http://localhost:5000/api
# Production mode server URL
VITE_API_BASE_PROD=https://real.sensorcensor.xyz/api

# Admin Panel Development Server Configuration
# Port for the Vite dev server (default: 5174)
VITE_PORT=5174
# Set to true for local development, false for production
VITE_LOCAL_DEV_MODE=true

# Client URL Configuration (for article links)
# Development mode client URL - used when VITE_LOCAL_DEV_MODE=true
VITE_CLIENT_URL_DEV=http://localhost:5173
# Production mode client URL - used when VITE_LOCAL_DEV_MODE=false
VITE_CLIENT_URL_PROD=https://real.sensorcensor.xyz

# Note: In Vite, environment variables must be prefixed with VITE_ to be accessible in the client
# This file is for development. For production, set these as environment variables on your server.
